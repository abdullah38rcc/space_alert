
<div class="row wrapper wrapper-content">
  <div class="col-sm-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t("models.news") %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content table-responsive">
       <table class="table table-hover" id="dev-table">
        <thead>
          <tr>
                        <th><%= t("news.title") %></th>
                        <th><%= t("news.desc") %></th>
                        <th><%= t("news.link") %></th>
                        <th><%= t("news.source") %></th>

                        <th><%= t("news.pub_date") %></th>
                        <th><%= t("news.image") %></th>
                        <th><%= t("news.code") %></th>
          </tr>
        </thead>
        <tbody>
          <% @news.each do |news| %>
          <tr>
                        <td><%= link_to simple_format(news.title), news %></td>
                        <td><%= simple_format news.desc %></td>
                        <td><%= link_to "Link", news.link %></td>
                        <td><%= news.source %></td>
                        <td><%= news.pub_date %></td>
                        <td><%= news.image %></td>
                        <td><%= news.code %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
