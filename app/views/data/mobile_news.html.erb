<div data-role="header">
  <h1>Listing News</h1>
</div>
 
<div data-role="content">
<ul data-role="listview" data-inset="true">
    <li data-role="list-divider">Friday, October 8, 2010 <span class="ui-li-count"><%= @news.count %></span></li>
	<% @news.each do |news| %>
    <li>
      <%= link_to news.link do %>
      	<h2><%= raw news.title %></h2>
      	<p><%= raw news.desc %></p>
      	<p class="ui-li-aside"><strong><%= news.pub_date %></strong></p>	
      <% end -%>
    </li>
    <% end %>    
</ul>
</div>
