
<div class="row wrapper wrapper-content">
  <div class="col-sm-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t("models.data") %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
       <table class="table table-hover" id="dev-table">
        <thead>
          <tr>
                        <th><%= t("data.name")%></th>
                        <th><%= t("data.description") %></th>
                        <th><%= t("data.url_xml") %></th>
                        <th><%= t("data.url_json") %></th>
                        <th><%= t("data.url_html") %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
                        <td>News</td>
                        <td>Daily news on the transient high-energy sky</td>
                        <td><%= link_to "XML", data_news_path(format: :xml) %></td>
                        <td><%= link_to "JSON", data_news_path(format: :json) %></td>
                        <td><%= link_to "HMTL", data_news_path() %></td>
          </tr>
          <tr>
                        <td>BeXRB</td>
                        <td>The BeXRB monitor data from http://integral.esac.esa.int/</td>
                        <td><%= link_to "XML", data_bexrb_path(format: :xml) %></td>
                        <td><%= link_to "JSON", data_bexrb_path(format: :json) %></td>
                        <td><%= link_to "HTML", data_bexrb_path %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>

