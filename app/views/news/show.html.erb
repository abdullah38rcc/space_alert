

<div class="row wrapper wrapper-content">
	<div class="col-sm-6 col-sm-offset-3">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h5><%=t '.title' %></h5>
				<div class="ibox-tools">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
				</div>
			</div>
			<div class="ibox-content">
				<dl class="dl-horizontal">

					<%= display(@news, :title) %>
					<%= display(@news, :desc) %>
					<%= display(@news, :link) %>
					<%= display(@news, :source) %>
					<%= display(@news, :pub_date) %>
					<%= display(@news, :image) %>
					<%= display(@news, :code) %>

			</div>
		</div>
	</div>
</div>

<div class="row wrapper wrapper-content">
	<div class="col-md-6 col-md-offset-3 text-center">
		<%= link_to t('helpers.links.edit'), edit_news_path(@news), class: "btn btn-success" %>
		<%= link_to t('helpers.links.back'), news_index_path, class: "btn btn-default"  %>
	</div>
</div>