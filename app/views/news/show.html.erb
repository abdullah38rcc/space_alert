

<div class="row wrapper wrapper-content">
	<div class="col-sm-6 col-sm-offset-3">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h5><%=t '.title' %></h5>
				<div class="ibox-tools">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
				</div>
			</div>
			<div class="ibox-content">
				<dl class="dl-horizontal">
										<dt><strong><%= t("news.title") %>:</strong></dt>
					<dd><%= @news.title %></dd>
										<dt><strong><%= t("news.desc") %>:</strong></dt>
					<dd><%= @news.desc %></dd>
										<dt><strong><%= t("news.link") %>:</strong></dt>
					<dd><%= @news.link %></dd>
										<dt><strong><%= t("news.pub_date") %>:</strong></dt>
					<dd><%= @news.pub_date %></dd>
										<dt><strong><%= t("news.image") %>:</strong></dt>
					<dd><%= @news.image %></dd>
										<dt><strong><%= t("news.code") %>:</strong></dt>
					<dd><%= @news.code %></dd>
									</dl>
			</div>
		</div>
	</div>
</div>

<div class="row wrapper wrapper-content">
	<div class="col-md-6 col-md-offset-3 text-center">
		<%= link_to t('helpers.links.edit'), edit_news_path(@news), class: "btn btn-success" %>
		<%= link_to t('helpers.links.back'), news_index_path, class: "btn btn-default"  %>
	</div>
</div>