
<div class="row wrapper wrapper-content">
  <div class="col-sm-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t("models.news") %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
       <table class="table table-hover" id="dev-table">
        <thead>
          <tr>
                        <th><%= t("news.title") %></th>
                        <th><%= t("news.desc") %></th>
                        <th><%= t("news.link") %></th>
                        <th><%= t("news.pub_date") %></th>
                        <th><%= t("news.image") %></th>
                        <th><%= t("news.code") %></th>
                        <th></th>
          </tr>
        </thead>
        <tbody>
          
        </tbody>
      </table>
      <% @bexrbs.each do |bexrb| %>
            <% tds = bexrb.css("td") %>
            <%= tds[0].tds[0].css('a').first['href'] %>
      <% end -%>
    </div>
  </div>
</div>
</div>

<div class="row wrapper wrapper-content">
  <div class="col-md-6 col-md-offset-3 text-center">
    <%= link_to t('news.new'), new_news_path, class: "btn btn-success"  %>
  </div>
</div>
