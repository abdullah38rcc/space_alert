

<div class="row wrapper wrapper-content">
	<div class="col-sm-6 col-sm-offset-3">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h5><%%=t '.title' %></h5>
				<div class="ibox-tools">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
				</div>
			</div>
			<div class="ibox-content">
				<dl class="dl-horizontal">
					<% attributes.reject(&:password_digest?).each do |attribute| -%>
					<dt><strong><%%= t("<%= singular_table_name %>.<%= attribute.name %>") %>:</strong></dt>
					<dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
					<% end -%>
				</dl>
			</div>
		</div>
	</div>
</div>

<div class="row wrapper wrapper-content">
	<div class="col-md-6 col-md-offset-3 text-center">
		<%%= link_to t('helpers.links.edit'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-success" %>
		<%%= link_to t('helpers.links.back'), <%= index_helper %>_path, class: "btn btn-default"  %>
	</div>
</div>